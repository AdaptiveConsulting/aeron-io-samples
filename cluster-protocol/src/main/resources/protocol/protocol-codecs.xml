<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   package="io.aeron.sample.cluster.protocol"
                   id="101"
                   version="1"
                   semanticVersion="1"
                   description="Message Codecs for communicating with sample Aeron Cluster."
                   byteOrder="littleEndian">
    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root.">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>
        <composite name="groupSizeEncoding" description="Repeating group dimensions.">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup" primitiveType="uint16"/>
        </composite>
        <composite name="varAsciiEncoding" description="Variable length (up to 512 char) ASCII string header.">
            <type name="length"      primitiveType="uint32" maxValue="512"/>
            <type name="varData"     primitiveType="uint8" length="0" characterEncoding="US-ASCII"/>
        </composite>
        <composite name="varUtf8Encoding" description="Variable length UTF8 string header.">
            <type name="length"      primitiveType="uint32" maxValue="512"/>
            <type name="varData"     primitiveType="uint8" length="0" characterEncoding="UTF-8"/>
        </composite>
        <enum name="BooleanType" encodingType="int32">
            <validValue name="FALSE">0</validValue>
            <validValue name="TRUE">1</validValue>
        </enum>
        <enum name="AddAuctionResult" encodingType="int32">
            <validValue name="SUCCESS">0</validValue>
            <validValue name="UNKNOWN_AUCTION">1</validValue>
            <validValue name="UNKNOWN_PARTICIPANT">2</validValue>
            <validValue name="INVALID_START_TIME">3</validValue>
            <validValue name="INVALID_END_TIME">4</validValue>
        </enum>
        <enum name="AddAuctionBidResult" encodingType="int32">
            <validValue name="SUCCESS">0</validValue>
            <validValue name="UNKNOWN_AUCTION">1</validValue>
            <validValue name="UNKNOWN_PARTICIPANT">2</validValue>
            <validValue name="CANNOT_SELF_BID">3</validValue>
            <validValue name="INVALID_PRICE">4</validValue>
        </enum>
        <type name="time" primitiveType="int64" description="Epoch time in milliseconds since 1 Jan 1970 UTC."/>
        <type name="price" primitiveType="int64" description="Price in whole cents."/>
    </types>

    <sbe:message name="AddParticipant"
                 id="1"
                 description="Add a new Auction Participant">
        <field name="participantId" id="1" type="int64"/>
        <data name="name" id="2" type="varAsciiEncoding"/>
    </sbe:message>

    <sbe:message name="ParticipantSnapshot"
                 id="2"
                 description="Snapshot storage for Participants in the system">
        <field name="participantId" id="1" type="int64"/>
        <data name="name" id="2" type="varAsciiEncoding"/>
    </sbe:message>

    <sbe:message name="CreateAuction"
                 id="10"
                 description="Create a new Auction">
        <field name="createdByParticipantId" id="1" type="int64"/>
        <field name="startTime" id="2" type="time"/>
        <field name="endTime" id="3" type="time"/>
        <data name="name" id="4" type="varAsciiEncoding"/>
        <data name="description" id="5" type="varAsciiEncoding"/>
    </sbe:message>

    <sbe:message name="AddAuctionBid"
                 id="11"
                 description="Create a new Auction">
        <field name="auctionId" id="1" type="int64"/>
        <field name="addedByParticipantId" id="2" type="int64"/>
        <field name="price" id="4" type="price"/>
        <data name="description" id="6" type="varAsciiEncoding"/>
    </sbe:message>

    <sbe:message name="AddAuctionResult"
                 id="12"
                 description="Result from an AddAuctionBid">
        <field name="auctionId" id="1" type="int64"/>
        <field name="result" id="2" type="AddAuctionBidResult"/>
    </sbe:message>

    <sbe:message name="IdGeneratorSnapshot"
                 id="20"
                 description="Stores the state of the IdGenerators in a snapshot">
        <field name="nextAuctionId" id="1" type="int64"/>
    </sbe:message>

</sbe:messageSchema>